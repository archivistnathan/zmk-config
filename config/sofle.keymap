#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

&th_tap {
    tapping-term-ms = <250>;
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
// |  ESC    |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |  -  |
// |  TAB  |  Q  |  W  |  F   |  P   |  B   |                   |  J   |  L    |  U    |  Y  |   ;   | ' |
// |  CMD  |  A  |  R  |  S   |  T   |  G   |                   |  M   |  N    |  E    |  I   |   O   |   SHIFT   |
// | SHIFT |  Z  |  X  |  C   |  D   |  V   |  MUTE  |   | PLAY |  K   |  H    |  ,    |  .   |   /   | APP |
//               | CTRL| ALT  | LOWER | DEL|  BACKSPACE |  | SPACE | ENTER | RAISE  | ALT   | CMD  |
            bindings = <
&kp ESC &kp N1 &kp N2   &kp N3   &kp N4    &kp N5                      &kp N6 &kp N7    &kp N8    &kp N9   &kp N0   &th_tap LS(MINUS) MINUS
&kp TAB   &th_tap LS(Q) Q  &th_tap LS(W) W    &th_tap LS(F) F    &th_tap LS(P) P     &th_tap LS(B) B                       &th_tap LS(J) J  &th_tap LS(L) L     &th_tap LS(U) U     &th_tap LS(Y) Y    &th_tap LS(SEMI) SEMI    &th_tap LS(SQT) SQT
&kp LCMD   &th_tap LS(A) A  &th_tap LS(R) R    &th_tap LS(S) S    &th_tap LS(T) T     &th_tap LS(G) G                       &th_tap LS(M) M  &th_tap LS(N) N     &th_tap LS(E) E     &th_tap LS(I) I    &th_tap LS(O) O &kp RSHFT
&kp LSHFT &th_tap LS(Z) Z  &th_tap LS(X) X    &th_tap LS(C) C    &th_tap LS(D) D     &th_tap LS(V) V  &kp C_MUTE &kp C_PP     &th_tap LS(K) K  &th_tap LS(H) H     &th_tap LS(COMMA) COMMA &th_tap LS(DOT) DOT  &th_tap LS(SLASH) SLASH &kp K_APP
                 &kp LCTRL &kp LALT &mo 1 &kp DEL &kp BSPC    &kp SPACE &kp RET &mo 2  &kp RALT  &kp RCMD
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
// |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
// | `     |   1 |   2 |   3  |   4  |   5  |                   |   6  |   7   |   8   |   9  |    0  |  F12  |
// |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
// |  CAPS |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
//               |     |      |      |      |        |  |       |      |       |       |      |
            bindings = <
&trans    &kp F1    &kp F2    &kp F3      &kp F4    &kp F5                    &kp F6    &kp F7   &kp F8          &kp F9    &kp F10   &kp F11
&kp GRAVE &kp N1    &kp N2    &kp N3      &kp N4    &kp N5                    &kp N6    &kp N7   &kp N8          &kp N9    &kp N0    &kp F12
&trans    &kp EXCL  &kp AT    &kp HASH    &kp DLLR  &kp PRCNT                 &kp CARET &kp AMPS &kp KP_MULTIPLY &kp LPAR  &kp RPAR  &kp PIPE
&kp CAPS    &kp EQUAL &kp MINUS &kp KP_PLUS &kp LBRC  &kp RBRC  &trans   &trans &kp LBKT  &kp RBKT &kp SEMI        &kp COLON &kp BSLH  &trans
                    &trans    &trans      &trans    &trans    &trans   &trans &trans    &trans   &trans          &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
// |BTCLR| BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
// |     | INS  | PSCR | GUI   |       |      |                | PGUP | HOME |   ^   |  END |       |  DEL  |
// |     | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |  <-  |   v   |  ->  |       | BKSPC |
// |     | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
//              |      |       |       |      |      |  |      |      |      |       |      |
            bindings = <
&bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4             &trans    &trans    &trans   &trans    &trans  &trans
&trans     &kp INS      &kp PSCRN    &kp K_CMENU  &trans       &trans                   &kp PG_UP &kp LG(LEFT)    &kp UP   &kp LG(RIGHT)   &trans     &kp DEL
&trans     &kp LALT     &kp LCTRL    &kp LSHFT    &trans       &kp CLCK                 &kp PG_DN &kp LEFT &kp DOWN &kp RIGHT &trans    &kp BSPC
&trans     &kp K_UNDO   &kp K_CUT    &kp K_COPY   &kp K_PASTE  &trans  &trans   &trans  &trans    &trans    &trans   &trans    &trans  &trans
                        &trans       &trans       &trans       &trans  &trans   &trans  &trans    &trans    &trans   &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };
    };
};
